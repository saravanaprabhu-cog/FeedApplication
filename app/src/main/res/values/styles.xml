<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="FeedItemTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/feedItemTitleColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="FeedItemDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:textColor">@color/feedItemDescriptionColor</item>
    </style>

    <style name="FeedDescription">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:textColor">@color/feedItemDescriptionColor</item>
    </style>

</resources>
